/* miniprogram/pages/main/main.wxss */

page {
  background: #EFEFF4;
}

.section{
  margin-bottom: 50rpx;
}

.section__title{
    margin-bottom: 16rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.picker {
  background: white;
  padding: 30rpx 50rpx;
}

page>view.header {
  color: red;
  background: cornflowerblue;
  height: 30vh;
}

view.header>image {
  height: 100%;
  width: 100%;
}

page>view.content {
  background: violet;
  height: 60vh;
}

page>view.footer {
  background: palevioletred;
  height: 10vh;
}

.content .chair-sheet {
  padding: 30rpx;
  height: 50%;
  width: 100%;
  background: orange;
}

.chair-sheet radio-group {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.chair-sheet radio .wx-radio-input{
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
  border-radius: 0;
  border: none;
}

.chair-sheet radio .wx-radio-input.wx-radio-input-checked {
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.chair-sheet radio .wx-radio-input.wx-radio-input-disabled {
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
}

button {
  position: fixed;
  width: 100%;
  bottom: 0;
}