/* pages/register/register.wxss */
button {
  position: relative;
  background-color: #2A8FBD;
  color: #FFF;
  border: 0;
  margin: 250rpx 0rpx;
  height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  vertical-align: middle;
  bottom: 0rpx;
  box-shadow: 0rpx 0rpx 28rpx 2rpx rgba(0, 0, 0, 0.3);
}

.btn_hover {
  background-color: rgb(38, 110, 143);
}

.page_bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.card-bg {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 60%;
  border-radius: 10rpx;
}

.card {
  padding: 20rpx;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.93);
  box-shadow: 0rpx 0rpx 30rpx 4rpx rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}

.user_icon {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0rpx 0rpx 30rpx 4rpx rgba(0, 0, 0, 0.5);
  border-radius: 150rpx;
}

.edit_view {
  border-bottom: 1px solid #dbdbdb;
  margin: 30rpx 0rpx;
}

.edit_icon {
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.info {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #ffffff85;
  font-size: 20rpx;
  margin: 10rpx 10rpx;
}